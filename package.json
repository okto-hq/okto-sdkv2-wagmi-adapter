{
  "name": "@okto_web3/wagmi-adapter",
  "version": "0.4.0",
  "description": "Wagmi Adapter for Okto SDK",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && tsc-esm-fix --target='dist' --ext='.js'",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "ci": "pnpm run build && pnpm run check-format",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "npm run ci",
    "prepare": "husky",
    "commit": "cz",
    "changeset": "changeset"
  },
  "dependencies": {
    "@changesets/cli": "^2.28.0",
    "@noble/ciphers": "^1.2.1",
    "@okto_web3/core-js-sdk": "0.6.1",
    "@wagmi/connectors": "^5.7.7",
    "@wagmi/core": "^2.16.4",
    "tsc-esm-fix": "^3.1.2",
    "viem": "2.x"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.0",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@rainbow-me/rainbowkit": "^2.2.4",
    "@types/node": "^22.13.4",
    "changeset": "^0.2.6",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.5.1",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "viem": "2.x",
    "@rainbow-me/rainbowkit": "2.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "keywords": [
    "wagmi",
    "okto",
    "adapter",
    "web3",
    "sdk"
  ],
  "author": "Sparsh Agarwal <sparsh.a@coindcx.com>",
  "packageManager": "pnpm@10.4.1"
}
